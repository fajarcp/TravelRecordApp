<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TravelRecordApp.MainPage">

    <StackLayout BackgroundColor="Blue" VerticalOptions="Center" Margin="15">
        <Entry x:Name="emailEntry" Placeholder="Email" Keyboard="Email" />
        <Entry x:Name="passwordEntry" Placeholder="Password" IsPassword="True" />
        <Button x:Name="loginButton" Text="Login" TextColor="White" BackgroundColor="{StaticResource blueColor}" Clicked="loginButton_Clicked"/>
    </StackLayout>

</ContentPage>
