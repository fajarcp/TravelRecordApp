<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TravelRecordApp.MainPage">

    <StackLayout BackgroundColor="Blue" VerticalOptions="Center" Margin="15">
        <Entry Placeholder="Email"/>
        <Entry Placeholder="Password"/>
        <Button x:Name="loginButton" Text="Login" TextColor="White" BackgroundColor="#4469E6" Clicked="loginButton_Clicked"/>
    </StackLayout>

</ContentPage>
